<div class="container">
  <div class="col-md-4">
    <h3>Create Project</h3><br>

    <%= form_for @project do |f| %>

    <div class="form-group">
      <% if @project.errors.any? %>
      <ul>
        <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <%end%>
      </ul>
      <%end%>
    </div><br>


    <div class="form-group">
      <%= f.text_field :name, placeholder: "Project Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.date_field :due_date, placeholder:"Due Date", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.fields_for :activity_attributes do |activity| %>
      <%= activity.text_area :name, placeholder:"Add Activity", class: "form-control" %><br>
    </div>
    <% end %>

    <div class="form-group"><br>
      <%= f.submit "Add Project", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
