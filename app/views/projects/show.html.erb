<div class="container">
  <div class="col-md-8">
    <h3><%= @project.name %></h3><br>
    <% @project.activities.each do |activity| %>
    <h4><%= link_to activity.name, edit_project_activity_path(@project, activity)%></h4>
    <% end %>
  </div>
</div><br><br>

<div class="container">
  <div class="col-md-8">

    <div class="form-group">

    <%= link_to "New Activity", new_project_activity_path(@project), method: 'get', class: "btn btn-primary"%>
  </div>

    <div class="form-group">
      <%= button_to "Delete Project", project_path(@project), method: 'delete', class: "btn btn-danger"%>
    </div>
  </div>
</div>
