<div class="container">
  <div class="col-md-4">
    <h3>Update Activity for <%= @project.name %></h3><br>

    <%= form_for ([@project, @activity]) do |f| %>

    <div class="form-group">
      <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
    <% end %>

    <%= form_for ([@project, @activity]) do |f| %>

    <div class="form-group">
      <%= button_to "Delete Activity", project_activity_path(@project, @activity), method: 'delete', class: "btn btn-danger"%>
      <% end %>

    </div>
  </div>
</div>
